body {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed #9a9a9a;
  background-size:cover;
  font-family: 'Open Sans', sans-serif;
  font-size:16px;
  color: #fff;
}
body:before{
  background-color:#000;
  opacity:0.65;
  content:"";
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
}
h1,h2,h3{
  text-transform:uppercase;
  letter-spacing:0.1em;
  color:#fff;
}
h2{
  font-size:1.6rem;
  font-weight:600;
  margin-bottom:30px;
}
a{
  color: #fff;
}
a:hover,
a:focus{
  color:inherit;
}
.list-unstyled{
  list-style:none;
  padding-left:0;
}
.jumbotron{
  background-color:transparent;
  text-align:center;
  text-transform: uppercase;
  padding-top:150px;
  padding-bottom:150px;
}
.jumbotron h1{
  font-weight:300;
}
.jumbotron p{
  letter-spacing: 0.1em;
  font-size:1.6rem;
  color:rgba(255, 255, 255, 0.698);
}

/* Layout */
#page{
  position:relative;
}
header{
  padding-top:50px;
}
footer{
}
footer p{
  font-size:0.9em;
}
.footer-top{
  border-top:1px solid #ccc;
  padding:30px 0 60px;
  color:rgba(255, 255, 255, 0.698);
}
.footer-bottom{
  border-top:1px solid #ccc;
  padding:30px 0 60px;
  text-align:center;
  text-transform: uppercase;
}
@media(min-width:769px){
  .footer-top div:first-child{
    padding-left:0;
  }
  .footer-top div:last-child{
    padding-right:0;
  }
}

/* Navigation */
.navbar{
  text-transform: uppercase;
}
.navbar-nav{
  float:none;
}
.navbar-nav > li{
  float:none;
  display:inline-block;
}
.navbar-nav > li > a{
  font-weight:300;
  font-size:0.8em;
  letter-spacing: 0.1em;
  color:rgba(255, 255, 255, 0.698);
}
.navbar-nav > .active > a{
  font-weight:bold;
}
.navbar-nav > li > a:hover,
.navbar-nav > li > a:focus{
  background-color:transparent;
  color:#fff;
}
.navbar-collapse.collapse{
  text-align:center;
}

/* Posts list */
.posts-list li{
  margin-bottom:30px;
}
.post-title{
  display:block;
  font-weight:bold;
  color:rgba(255, 255, 255, 0.698);
  margin-bottom:5px;
}
.post-date{
  font-size:0.8em;
  font-weight:300;
  letter-spacing: 0.1em;
  text-transform:uppercase;
}

/* Social links */
.social-links{
  margin-bottom:40px;
}
.social-links i{
  font-size:1.3em;
}
.social-links li{
  display:inline-block;
  margin-right:20px;
}
.social-links a:hover,
.social-links a:focus{
  color:rgba(255,255,255, 0.7);
}