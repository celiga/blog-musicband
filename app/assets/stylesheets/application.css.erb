body {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed #9a9a9a;
  background-size:cover;
  font-family: 'Open Sans', sans-serif;
  color: #fff;
}
a{
  color: #fff;
}
.list-unstyled{
  list-style:none;
  padding-left:0;
}
.jumbotron{
  background-color:transparent;
  text-align:center;
  text-transform: uppercase;
}
footer{
  border-top:1px solid #ccc;
  padding:30px 0 60px;
  text-align:center;
  text-transform: uppercase;
}
.social-links{
  margin-bottom:40px;
}
.social-links i{
  font-size:1.5em;
}
.social-links li{
  display:inline-block;
  margin-right:20px;
}
.social-links a:hover,
.social-links a:focus{
  color:rgba(255,255,255, 0.7);
}