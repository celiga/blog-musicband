body {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed #9a9a9a;
  background-size:cover;
  font-family: 'Open Sans', sans-serif;
  font-size:16px;
  color: #fff;
}
body:before{
  background-color:#000;
  opacity:0.65;
  content:"";
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
}
h1,h2,h3{
  text-transform:uppercase;
  letter-spacing:0.1em;
  color:#fff;
}
h2{
  font-size:1.6rem;
  font-weight:600;
  margin-bottom:30px;
}
a{
  color: #fff;
}
a:hover,
a:focus{
  color:inherit;
}
.list-unstyled{
  list-style:none;
  padding-left:0;
}
.jumbotron{
  background-color:transparent;
  text-align:center;
  text-transform: uppercase;
  padding-top:150px;
  padding-bottom:250px;
}
.jumbotron h1{
  font-weight:300;
}
.jumbotron p{
  letter-spacing: 0.1em;
  font-size:1.6rem;
  color:rgba(255, 255, 255, 0.698);
}

/* Layout */
@media (min-width: 1200px) {
  .container{
    width:1100px;
  }
}
#page{
  position:relative;
}
#content{
  padding-bottom:40px;
}
#content section{
  padding-top:20px;
  margin-bottom:60px;
  border-bottom:1px solid #606060;
}
header{
  padding-top:50px;
}
footer{
}
footer p{
  font-size:0.9em;
}
.footer-top{
  border-top:1px solid #606060;
  padding:30px 0 60px;
  color:rgba(255, 255, 255, 0.698);
}
.footer-bottom{
  border-top:1px solid #606060;
  padding:30px 0 60px;
  text-align:center;
  text-transform: uppercase;
}

/* Navigation */
.navbar{
  text-transform: uppercase;
}
.navbar-nav{
  float:none;
}
.navbar-nav > li{
  float:none;
  display:inline-block;
}
.navbar-nav > li > a{
  font-weight:300;
  font-size:0.8em;
  letter-spacing: 0.1em;
  color:rgba(255, 255, 255, 0.698);
}
.navbar-nav > .active > a{
  font-weight:bold;
}
.navbar-nav > li > a:hover,
.navbar-nav > li > a:focus{
  background-color:transparent;
  color:#fff;
}
.navbar-collapse.collapse{
  text-align:center;
}
.navbar-toggle .icon-bar{
  background-color:#fff;
}
@media(max-width:768px){
  .navbar-collapse.collapse{
    text-align:right;
  }
}

/* Posts list */
.posts-list li{
  margin-bottom:30px;
}
.post-title{
  display:block;
  font-weight:bold;
  color:rgba(255, 255, 255, 0.698);
  margin-bottom:5px;
}
.post-date{
  font-size:0.8em;
  font-weight:300;
  letter-spacing: 0.1em;
  text-transform:uppercase;
}

/* Social links */
.social-links{
  margin-bottom:60px;
}
.social-links i{
  font-size:1.3em;
}
.social-links li{
  display:inline-block;
  margin-right:20px;
}
.social-links a:hover,
.social-links a:focus{
  color:rgba(255,255,255, 0.7);
}

/* Tables */
table{
  border-bottom:1px solid #606060;
}
.table-hover > tbody > tr:hover{
  background-color:rgba(255,255,255,0.1);
  cursor:pointer;
}
.table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th{
  border-top-color: #606060;
  padding-top:15px;
  padding-bottom:15px;
  vertical-align:middle;
}

/* Home */
.section-more-link{
  text-transform: uppercase;
  font-size:0.8em;
  color:rgba(255, 255, 255, 0.698);
}
.section-title{
  float:left;
  width:100%;
  border-bottom:1px solid #606060;
}
.section-title h2{
  float:left;
  font-weight:700;
  font-size:2rem;
  margin-top:0;
  margin-bottom:20px;
}
.section-title .section-more-link{
  float:right;
  font-weight:300;
  letter-spacing: 0.1em;
  margin-top:5px;
}
.videos-list{
  /*float:left;
  width:100%;
  border-bottom:1px solid #606060;*/
}
.videos-list > div{
  border-right:1px solid #606060;
  padding-top:20px;
  padding-bottom:20px;
}
.videos-list > div:last-child{
  border-right:0;
}
.video-image:hover{
  opacity:0.9;
}
.video-title{
  font-weight: 700;
  margin-top:10px;
}
#content section.gigs{
  border-bottom:0;
}
.gigs .section-title{
  border-bottom:0;
}
.gigs .section-more-link{
  display: block;
  text-align:center;
  font-weight:700;
}
.gigs table td:nth-child(1){
  text-transform:uppercase;
  font-size:1.3rem;
}
.gigs table td:nth-child(2){
  font-weight:700;
  font-size:2rem;
}
.gigs table td:nth-child(3){
  font-weight:700;
  color:rgba(255, 255, 255, 0.698);
}
.gigs table td:nth-child(4){
  color:rgba(255, 255, 255, 0.698);
}
@media(min-width:769px){
  .gigs table td:nth-child(1){
    max-width:20px;
  }
  #content .row div{
  }
}