body {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed #9a9a9a;
  background-size:cover;
  font-family: 'Open Sans', sans-serif;
  font-size:16px;
  color: #fff;
}
body:before{
  background-color:#000;
  opacity:0.65;
  content:"";
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
}
h1,h2,h3{
  text-transform:uppercase;
  letter-spacing:0.1em;
  color:#fff;
}
h1{
  text-align: center;
}
h2{
  font-size:1.6rem;
  font-weight:600;
  margin-bottom:30px;
}
a{
  color: #fff;
}
a:hover,
a:focus{
  color:inherit;
}
.list-unstyled{
  list-style:none;
  padding-left:0;
}
.jumbotron{
  background-color:transparent;
  text-align:center;
  text-transform: uppercase;
  padding-top:20px;
  padding-bottom:20px;
}
.jumbotron h1{
  font-weight:300;
}
.jumbotron p{
  display:none;
  letter-spacing: 0.1em;
  font-size:1.6rem;
  color:rgba(255, 255, 255, 0.698);
}

/* Layout */
@media (min-width: 1200px) {
  .container{
    width:1100px;
  }
}
#page{
  position:relative;
}
#content{
  padding-bottom:40px;
}
#content h1{
  font-size:1.7em;
  border-bottom:1px solid #606060;
  padding-bottom:25px;
  margin-bottom:50px;
}
#content section{
  padding-top:20px;
  margin-bottom:60px;
  border-bottom:1px solid #606060;
}
header{
  padding-top:50px;
}
footer p{
  font-size:0.9em;
}
footer #top-link{
  position:fixed;
  bottom:30px;
  right:30px;
  opacity:0.2;
}
.footer-top{
  border-top:1px solid #606060;
  padding:30px 0 60px;
  color:rgba(255, 255, 255, 0.698);
}
.footer-bottom{
  border-top:1px solid #606060;
  padding:30px 0 30px;
  text-align:center;
  text-transform: uppercase;
}

/* Navigation */
.navbar{
  text-transform: uppercase;
}
.navbar-nav{
  float:none;
}
.navbar-nav > li{
  float:none;
  display:inline-block;
}
.navbar-nav > li > a{
  font-weight:300;
  font-size:0.8em;
  letter-spacing: 0.1em;
  color:rgba(255, 255, 255, 0.698);
}
.navbar-nav > .active > a{
  font-weight:bold;
}
.navbar-nav > li > a:hover,
.navbar-nav > li > a:focus{
  background-color:transparent;
  color:#fff;
}
.navbar-collapse.collapse{
  text-align:center;
}
.navbar-toggle .icon-bar{
  background-color:#fff;
}
@media(max-width:768px){
  .navbar-collapse.collapse{
    text-align:right;
  }
}

/* Posts list */
.post-item{
  margin-bottom:50px;
}
.post-title{
  font-size:1.7em;
  font-weight:normal;
  letter-spacing: 0.03em;
  text-transform: none;
  margin-bottom: 20px;
}
.post-date{
  text-transform: uppercase;
  font-size:0.8em;
  margin-bottom: 30px;
}
.post-content{
  color:rgba(255, 255, 255, 0.698);
}
.post-more{
  margin-top:30px;
}

/* Pagination */
.pagination{
  display: block;
  padding-top:30px;
  border-top:1px solid #606060;
  border-radius:0;
}
.pagination,
.pagination a{
  color:rgba(255, 255, 255, 0.4);
}
.pagination span{
  display: inline-block;
  margin-right:15px;
  padding:8px 15px;
  border:1px solid rgba(255, 255, 255, 0.2);
}
.pagination .current{
  background-color: rgba(255, 255, 255, 0.1);
  border-color:transparent;
}
.pagination .next,
.pagination .prev,
.pagination .first,
.pagination .last{
  display:none;
}

/* Recent Posts list */
.recentposts-list li{
  margin-bottom:30px;
}
.recentposts-title{
  display:block;
  font-weight:bold;
  color:rgba(255, 255, 255, 0.698);
  margin-bottom:5px;
}
.recentposts-date{
  font-size:0.8em;
  font-weight:300;
  letter-spacing: 0.1em;
  text-transform:uppercase;
}

/* Alert */
.alert{
  background-color:rgba(255, 255, 255, 0.1)!important;
  border-color:transparent!important;
  color:#fff;
}
.alert i{
  margin-right:5px;
}

/* Social links */
.social-links{
  margin-bottom:60px;
}
.social-links i{
  font-size:1.3em;
}
.social-links li{
  display:inline-block;
  margin-right:20px;
}
.social-links a:hover,
.social-links a:focus{
  color:rgba(255,255,255, 0.7);
}

/* Tables */
table{
  border-bottom:1px solid #606060;
}
.table-hover > tbody > tr:hover{
  background-color:rgba(255,255,255,0.1);
  cursor:pointer;
}
.table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th{
  border-top-color: #606060;
  padding-top:15px;
  padding-bottom:15px;
  vertical-align:middle;
}

/* Forms */
form{
  margin-bottom:20px;
}
form input{
  background-color:rgba(0, 0, 0, 0.2);
  border:1px solid rgba(255, 255, 255, 0.2);
  border-radius:none;
  padding:10px 15px;
}
form label{
  color:rgba(255, 255, 255, 0.7);
}
form .field{
  margin-bottom:20px;
}
form input[type="submit"]{
  background-color:rgba(0, 0, 0, 0.4);
  border:none;
  color:rgba(255, 255, 255, 0.7);
  text-transform:uppercase;
  font-size:0.8em;
  font-weight:bold;
  padding:8px 20px;
}

/* Admin link */
.admin-link a{
  display:block;
  color:rgba(255, 255, 255, 0.698);
  font-size:0.8em;
  text-transform: none;
  text-align: left;
  margin-top:50px;
}

/* Home */
.section-more-link{
  text-transform: uppercase;
  font-size:0.8em;
  color:rgba(255, 255, 255, 0.698);
}
.section-title{
  float:left;
  width:100%;
  border-bottom:1px solid #606060;
}
.section-title h2{
  float:left;
  font-weight:700;
  font-size:2rem;
  margin-top:0;
  margin-bottom:20px;
}
.section-title .section-more-link{
  float:right;
  font-weight:300;
  letter-spacing: 0.1em;
  margin-top:5px;
}
.videos-list{
  /*float:left;
  width:100%;
  border-bottom:1px solid #606060;*/
}
.videos-list > div{
  border-right:1px solid #606060;
  padding-top:20px;
  padding-bottom:20px;
}
.videos-list > div:last-child{
  border-right:0;
}
.video-image:hover{
  opacity:0.9;
}
.video-title{
  font-weight: 700;
  margin-top:10px;
}
#content section.gigs{
  border-bottom:0;
}
.gigs .section-title{
  border-bottom:0;
}
.gigs .section-more-link{
  display: block;
  text-align:center;
  font-weight:700;
}
.gigs table td:nth-child(1){
  text-transform:uppercase;
  font-size:1.3rem;
}
.gigs table td:nth-child(2){
  font-weight:700;
  font-size:2rem;
}
.gigs table td:nth-child(3){
  font-weight:700;
  color:rgba(255, 255, 255, 0.698);
}
.gigs table td:nth-child(4){
  color:rgba(255, 255, 255, 0.698);
}
@media(min-width:769px){
  .gigs table td:nth-child(1){
    max-width:20px;
  }
  #content .row div{
  }
}

/* Home page */
body.home .jumbotron{
  padding-top:150px;
  padding-bottom:250px;
}
body.home .jumbotron p{
  display:block;
}